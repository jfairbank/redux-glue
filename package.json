{
  "name": "redux-glue",
  "version": "0.0.1",
  "description": "Glue together Redux actions to create testable, sequenced actions",
  "main": "lib/index.js",
  "files": [
    "src",
    "lib"
  ],
  "scripts": {
    "build": "babel src --out-dir lib",
    "clean": "rm -rf lib",
    "lint": "eslint {src,test}",
    "prepublish": "npm run clean && npm run build",
    "test": "ava",
    "tdd": "ava -w",
    "typecheck": "flow",
    "typecheck:dev": "nodemon --exec flow"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jfairbank/redux-glue.git"
  },
  "keywords": [
    "redux",
    "sequence",
    "compose",
    "functional"
  ],
  "author": "Jeremy Fairbank <elpapapollo@gmail.com> (http://jeremyfairbank.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jfairbank/redux-glue/issues"
  },
  "homepage": "https://github.com/jfairbank/redux-glue#readme",
  "dependencies": {
    "invariant": "^2.2.1",
    "lodash.isequal": "^4.1.3"
  },
  "devDependencies": {
    "ava": "^0.13.0",
    "babel-cli": "^6.6.5",
    "babel-core": "^6.7.4",
    "babel-eslint": "^6.0.2",
    "babel-plugin-transform-flow-strip-types": "^6.7.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-register": "^6.7.2",
    "eslint": "^2.7.0",
    "eslint-import-resolver-node": "^0.2.0",
    "eslint-plugin-import": "^1.4.0",
    "nodemon": "^1.9.1",
    "testdouble": "^1.4.1"
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "transform-flow-strip-types"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "eslint:recommended",
      "plugin:import/errors",
      "plugin:import/warnings"
    ],
    "settings": {
      "import/resolver": "node"
    },
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "parserOptions": {
      "sourceType": "module"
    },
    "rules": {
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "no-unused-vars": [
        "error",
        {"args": "after-used", "argsIgnorePattern": "^_"}
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ]
    }
  },
  "ava": {
    "require": [
      "babel-register"
    ]
  }
}
